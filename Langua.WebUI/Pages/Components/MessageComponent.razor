<div class="alert bg-white d-flex flex-column flex-sm-row p-2 mb-10" style="color:black">
   <span class="position-absolute " style="top:-10px; left : -10px">
        @if (!string.IsNullOrEmpty(Photo))
        {
            <img src="@Photo" width="20px" height="20px" style="border-radius:50%" />
        }
        else
        {
            <h5 style="color:red; border:1px solid gray; background:white; border-radius:50%; width:30px; height:30px; text-align:center">A</h5>
        }
   </span>
    <div class=" text-primary pe-0 pe-sm-10 px-3">
        <span>
            @Message
        </span>
        <div style="text-align:right" class="text-secondary">
            <small>
                @Date
            </small>
        </div>
    </div>
</div>
@code {
    [Parameter] public string Message { get; set; }
    [Parameter] public string Sender { get; set; }
    [Parameter] public string Photo { get; set; }
    [Parameter] public DateTime Date { get; set; }
    protected override Task OnInitializedAsync()
    {
        return base.OnInitializedAsync();
    }
}
