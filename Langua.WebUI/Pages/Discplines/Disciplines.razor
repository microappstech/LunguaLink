@page "/Subjects"
@layout WebUI.Pages.Layout.SideMainLayout
@using Langua.Models;
@inherits DisciplinesComponent


<div class="row py-3">
    <div class="col-md-9">
        <h3>@L["Subjects"]</h3>
    </div>
    <div class="col-md-3 ">
        <RadzenButton ButtonStyle="ButtonStyle.Primary" Click="@(()=>SubmitAdd())" Icon="add" class="text-sm" Text="@L["Add New Subject"]"></RadzenButton>
    </div>

</div>
<RadzenContent>
    <RadzenDataGrid @ref="@grid0" Data="subjects" TItem="Subject" AllowSorting="true" AllowFiltering="true" FilterMode="FilterMode.Simple" >
        <Columns>
            <RadzenDataGridColumn Property="Photo" Title="@L["Photo"]" TItem="Subject">
                <Template Context="SubContext">
                    <div>
                        <img src="@SubContext.Photo" width="50"/>
                        <span>@SubContext.Name</span>
                    </div>
                </Template>
            </RadzenDataGridColumn>
            <RadzenDataGridColumn Property="Description" Title="@L["Description"]" TItem="Subject" />
            <RadzenDataGridColumn TItem="Subject" Width="120px">
                <Template Context="SubContext" >
                    <RadzenButton ButtonStyle="ButtonStyle.Primary" Icon="edit" Size="ButtonSize.Medium" Click="@((args) => Edit(SubContext))"  class="mr-2" />
                    <RadzenButton ButtonStyle="ButtonStyle.Danger" Icon="delete" Size="ButtonSize.Medium" Click="@((args) =>Delete(SubContext))" />
                </Template>
            </RadzenDataGridColumn>
        </Columns>

    </RadzenDataGrid>
</RadzenContent>


