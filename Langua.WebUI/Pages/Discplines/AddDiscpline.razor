@page "/AddSubjbect"
@using Langua.Models
@inherits AddDiscplineComponent
<PageTitle>Add Candidate</PageTitle>
<div class="px-2">

    <EditForm Model="@subject" OnValidSubmit="@HandleValidSubmit">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="row">
            <div class="form-group mb-1 col-md-6">
                <label for="Photo">@L["Photo"] :</label>
                <InputFile id="Photo" OnChange="@loadImage" class="form-control" />
            </div>
            <div class="col-md-5">
                <img src="" />
            </div>
        </div>
        <div class="row d-flex">
            <div class="form-group mb-1 col-md-6">
                <label for="FullName">@L["Subject Name"] :</label>
                <InputText id="FullName" @bind-Value="subject.Name" class="form-control" />
            </div>

            <div class="form-group mb-1 col-md-6">
                <label for="Phone">@L["Description"] :</label>
                <InputText id="Phone" @bind-Value="subject.Description" class="form-control" />
            </div>
        </div>

        <div class="mx-auto mt-2 text-center">
            <button type="submit" class="btn btn-primary px-5 mx-3">Submit</button>
            <button type="reset" class="btn btn-danger px-5 mx-3">Rest</button>
            <button type="button" @onclick="@(()=>dialogService.Close())" class="btn btn-secondary px-5">Close</button>

        </div>
    </EditForm>

</div>

