@page "/AddCandidate"
@using Langua.Models

@inherits AddCandidateComponent
<PageTitle>Add Candidate</PageTitle>
<div class="px-2">

    <EditForm Model="@candidate" OnValidSubmit="@HandleValidSubmit">
        <div  class="text-danger">
            
            <DataAnnotationsValidator />
            <ValidationSummary />
            @if (Errors.Count() > 0)
            {
                <ul>

                    @foreach (var error in Errors)
                    {
                        <li>@error</li>
                    }
                </ul>
            }
        </div>

        <div class="row">
            <div class="form-group mb-1 col-md-6">
                <label for="Photo">@L["Photo"] :</label>
                <RadzenFileInput id="Photo" @bind-Value="@candidate.Photo" class="form-control" />
            </div>
            <div class="col-md-6 my-auto">
                <div class="form-group my-auto">
                    <label for="FullName">@L["Full Name"] :</label>
                    <InputText id="FullName" @bind-Value="candidate.FullName" class="form-control" />
                    <RadzenRequiredValidator Component="Email" Text="@L["The Field is required"]" Popup=true />
                </div>
            </div>
        </div>

        <div class="form-group mb-2">
            <label for="Email">@L["Email"] :</label>
            <RadzenTextBox id="Email" @bind-Value="@candidate.Email" class="form-control" />
            <RadzenRequiredValidator Component="Email" Text="@L["The Field is required"]" Popup=true />
            <RadzenEmailValidator Component="Email" Text="@L["Provide a valid email address"]" Popup=true />
            <RadzenCustomValidator Validator="(()=>MailNotTaken(candidate.Email))" Text="@L["Mail already taken"]" Popup=true />
        </div>

        <div class="row">
            <div class="form-group mb-2 col-md-6">
                <label for="SubjectId">@L["Subject"] :</label>
                <InputSelect id="SubjectId" TValue="int"  @bind-Value="candidate.SubjectId" class="form-control">
                    @if(subjects is null)
                    {
                        <option value="">None</option>
                    }
                    else
                    {
                        @foreach (Subject subject in subjects)
                        {
                            <option value="@subject.Id">@subject.Name (ID: @subject.Id)</option>
                        }
                    }                  
                </InputSelect>
            </div>

            <div class="form-group mb-2 col-md-6">
                <label for="Phone">@L["Phone"] :</label>
                <InputText id="Phone" @bind-Value="candidate.Phone" class="form-control" />
                <RadzenRequiredValidator Component="Email" Text="@L["The Field is required"]" Popup=true />
            </div>  
        </div>
        <div class="mx-auto mt-2 text-center">
            <button type="submit" class="btn btn-primary px-5 mx-3">Submit</button>
            <button type="reset" class="btn btn-danger px-5 mx-3">Rest</button>
            <button type="button" @onclick="@(()=>Close())" class="btn btn-secondary px-5">Close</button>

        </div>
    </EditForm>

</div>

