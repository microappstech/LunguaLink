@page "/EditTeacher"
@using Langua.Models
@inherits EditTeacherComponent
<PageTitle>Edit Teacher</PageTitle>
<div class="px-2">

    <EditForm Model="@teacher" OnValidSubmit="@HandleValidSubmit">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="row">
            <div class="form-group mb-1 col-md-6">
                <label for="Photo">@L["Photo"] :</label>
                <InputFile id="Photo" OnChange="@loadImage" class="form-control" />
            </div>
            <div class="col-md-5">
                <img src="" />
            </div>
        </div>
        <div class="row d-flex">
            <div class="form-group mb-1 col-md-6">
                <label for="FullName">@L["Full Name"] :</label>
                <InputText id="FullName" @bind-Value="@teacher.FullName" class="form-control" />
            </div>

            <div class="form-group mb-1 col-md-6">
                <label for="Phone">@L["Phone"] :</label>
                <InputText id="Phone" @bind-Value="teacher.Phone" class="form-control" />
            </div>
        </div>

        <div class="form-group mb-1">
            <label for="Email">@L["Email"] :</label>
            <InputText id="Email" @bind-Value="teacher.Email" class="form-control" />
        </div>

        @if (ChangePass)
        {
            <div class="form-group mb-1 col-md-6">
                <label for="Password">Password :</label>
                <InputText id="Password" type="Password" @bind-Value="teacher.Password" class="form-control" />
            </div>
        }
        <div class="mx-auto mt-2 text-center">
            <button type="submit" class="btn btn-primary px-5 mx-3">Submit</button>
            <button type="reset" class="btn btn-danger px-5 mx-3">Rest</button>
            <button type="button" @onclick="@(()=>dialogService.Close())" class="btn btn-secondary px-5">Close</button>

        </div>
    </EditForm>

</div>

