@using Langua.Models
@inherits AddGroupComponent

<EditForm Model="@group" OnValidSubmit="@Submit" >
    <DataAnnotationsValidator />
    <ValidationSummary />
    <div class="form-group mb-4 row">
        <label class="col-md-3" for="groupnam">@L["Group's Name"] :</label>

        <div class="col-md-9">
            <InputText  id="groupnam" @bind-Value="group.Name" class="form-control" />
        </div>
    </div>

    <div class="form-group mb-4 row">
        <label for="desc" class="col-md-3">@L["Description"]</label>
        <div class="col-md-9">
            <InputText id="desc" class=" form-control" @bind-Value="group.Description"></InputText>
        </div>
    </div>

    <div class="mx-auto mt-2 text-center">
        <button type="submit" class="btn btn-primary px-5 mx-3">Submit</button>
        <button type="reset" class="btn btn-danger px-5 mx-3">Rest</button>
        <button type="button" @onclick="@(()=>dialogService.Close())" class="btn btn-secondary px-5">Close</button>
    </div>
</EditForm>

