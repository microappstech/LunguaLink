@using Langua.Models
@inherits AddGroupComponent

<RadzenTemplateForm Data="@group" Submit="@((Groups args)=>Submit(args))" >
    <div class="form-group mb-4 row">
        <label class="col-md-3" for="groupnam">@L["Group's Name"] :</label>

        <div class="col-md-9">
            <RadzenTextBox Name="Group"  id="groupnam" @bind-Value="group.Name" class="form-control" />
            <RadzenRequiredValidator Component="Group" Text="@L["The Field is required"]" Popup=true />
        </div>
    </div>

    <div class="form-group mb-4 row">
        <label for="desc" class="col-md-3">@L["Description"]</label>
        <div class="col-md-9">
            <RadzenTextBox Name="desc" id="desc" class=" form-control" @bind-Value="group.Description"></RadzenTextBox>
            <RadzenRequiredValidator Component="desc" Text="@L["The Field is required"]" Popup=true />
        </div>
    </div>
    <div class="form-group mb-4 row">
        <label for="desc" class="col-md-3">@L["Department"]</label>
        <div class="col-md-9">
            <RadzenDropDown Data="Departments" Name="Department" TextProperty="Name" @bind-Value="group.DepartmentId" ValueProperty="Id" AllowFiltering=true AllowClear=true class="w-100" />
            <RadzenRequiredValidator Component="Department" Text="@L["The Field is required"]" Popup=true DefaultValue="0" />
        </div>
    </div>

    <div class="mx-auto mt-2 text-center">
        <button type="submit" class="btn btn-primary px-5 mx-3">Submit</button>
        <button type="reset" class="btn btn-danger px-5 mx-3">Rest</button>
        <button type="button" @onclick="@(()=>dialogService.Close())" class="btn btn-secondary px-5">Close</button>
    </div>
</RadzenTemplateForm>

